global:
  env:
    - LARAVEL_ENV: live

web1:
  shared_writable_dirs:
    - /storage/cache
    - /storage/database
    - /storage/logs
    - /storage/sessions
    - /storage/views
    - /storage/work
    - /application/migrations
    - /application/config
  document_root: /public
  php_version: 5.3.8
  php_extensions:
    - pdo_mysql
    - mcrypt
    - eaccelerator
    - memcached
  before_deploy:
    - "php artisan migrate:install"
    - "php artisan session:table"
    - "php artisan migrate"
  after_deploy:
    - "rm -f storage/cache/*"
    - "rm -f storage/views/*"

